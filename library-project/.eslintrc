{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["simple-import-sort", "cypress"],
  "rules": {
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          [
            "^react$",
            "^@*",
            "^(?!components|contexts|dataInterfaces|pages|public|redux|services)"
          ],
          [
            "components",
            "contexts",
            "dataInterfaces",
            "pages",
            "public",
            "redux",
            "services"
          ]
        ]
      }
    ]
  },
  "extends": ["plugin:cypress/recommended"]
}
